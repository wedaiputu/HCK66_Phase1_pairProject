<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pilot List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <%- include('.navbar'); %>
        <h1 style="text-align: center; margin-top: 0.5rem; margin-bottom: 1.5rem; font-family: serif;">Pilot List</h1>
        <div class="bg-containercontainer">
            <ul class="responsive-table" style="padding-left: 3rem; padding-right: 3rem;">
                <li class="table-header">
                    <div class="col col-1">License Number</div>
                    <div class="col col-2">Name</div>
                    <div class="col col-3">Experience</div>
                    <div class="col col-4">Plane</div>
                </li>
                <% data.forEach(element=> { %>
                    <li class="table-row">
                        <div class="col col-1" data-label="License Number">
                            <%= element.licenseNumber %>
                        </div>
                        <div class="col col-2" data-label="Name">
                            <%= element.name %>
                        </div>
                        <div class="col col-3" data-label="Experience">
                            <%= element.experience %>
                        </div>
                        <div class="col col-4" data-label="Plane">
                            <%= element.Plane.name %>
                        </div>
                    </li>
                    <% }); %>
            </ul>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>